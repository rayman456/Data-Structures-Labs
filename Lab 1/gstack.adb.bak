package body GStack is

   StackArray : array (1 .. Size) of ITEM;
   Top        : Natural                   := 0;

   function Is_Empty return BOOLEAN is
   begin
      return Top = 0;
   end Is_Empty;

   function Is_Full return BOOLEAN is
   begin
      return Top = Size;
   end Is_Full;

   procedure Push (
         Stuff : in     ITEM) is
   begin
      if Is_Full then
         return;
      end if;
      Top := Top + 1;
      StackArray(Top) := Stuff;
   end Push;

   procedure Pop (
         Stuff :    out ITEM) is
   begin
      if Is_Empty then
         return;
      end if;
      Stuff := StackArray(Top);
      Top := Top - 1;
   end Pop;

   function Current_Size return NATURAL is
   begin
      return Top;
   end Current_Size;

   function Total_Size return POSITIVE is
   begin
      return Size;
   end;

end GStack;